{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "默认配置",
            "description": "Debug，使用编译器的默认定义和包含路径。",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "构建 Release",
            "description": "使用 Release 级别的构建配置。",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ]
}
